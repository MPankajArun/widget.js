{
  "name": "widgetjs",
  "version": "1.2.3",
  "description": "widget.js framework",
  "main": "dist/widget.bundle.js",
  "author": "Nicolas Vanhoren",
  "license": "MIT",
  "keywords": [
    "widget",
    "framework"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/nicolas-van/widget.js.git"
  },
  "files": [
    "dist/widget.bundle.js"
  ],
  "scripts": {
    "build": "webpack",
    "lint": "eslint src/**.js",
    "test": "npm run lint && npm run build && phantomjs ./node_modules/mocha-phantomjs-core/mocha-phantomjs-core.js test.html"
  },
  "dependencies": {},
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.13.1",
    "eslint-plugin-compat": "^2.1.0",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "mocha": "^4.0.1",
    "mocha-phantomjs-core": "^2.1.2",
    "phantomjs-prebuilt": "^2.1.16",
    "webpack": "^3.10.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "plugins": [
      "compat"
    ],
    "rules": {
      "no-console": "off",
      "indent": [
        "error",
        2
      ],
      "compat/compat": "error"
    }
  },
  "browserslist": [
    "> 1%",
    "IE >= 9",
    "not OperaMini all"
  ]
}
